@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin Panel";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Admin Panel
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Mevcut Yönetim Kartları -->

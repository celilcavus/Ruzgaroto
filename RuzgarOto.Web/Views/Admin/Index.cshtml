                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Hakkımızda</h4>
                                            <p class="card-text">Hakkımızda sayfası içeriklerini yönetin</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="/About/Index" class="btn btn-light btn-sm">
                                        Yönet
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Hizmetler</h4>
                                            <p class="card-text">Hizmetler içeriklerini yönetin</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="/Services/Index" class="btn btn-light btn-sm">
Yönet
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Hizmet Kategorileri</h4>
                                            <p class="card-text">Servis kategorilerini yönetin</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="/ServiceCategory/Index" class="btn btn-light btn-sm">
Yönet
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">İletişim</h4>
                                            <p class="card-text">İletişim bilgilerini yönetin</p>
                                        </div>

@model _01.RuzgarOto.Entity.MenuSettings

@{
    ViewData["Title"] = "Yeni Menü Ekle";
    Layout = "_LayoutAdmin";
    var categories = ViewBag.Categories as IEnumerable<_01.RuzgarOto.Entity.ServiceCategory>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Yeni Menü Öğesi Ekle
                    </h3>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MenuName" class="form-label">Menü Adı *</label>
                                    <input asp-for="MenuName" class="form-control" placeholder="örn: Ana Sayfa" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MenuUrl" class="form-label">Menü URL *</label>
                                    <input asp-for="MenuUrl" class="form-control" placeholder="örn: / veya /About/About" required />
                                    <small class="form-text text-muted">
                                        Ana sayfa için: <code>/</code>, 
                                        Hakkımızda için: <code>/About/About</code>
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="MenuIcon" class="form-label">Icon (Font Awesome)</label>
                                    <input asp-for="MenuIcon" class="form-control" placeholder="fas fa-home" />
                                    <small class="form-text text-muted">
                                        <a href="https://fontawesome.com/icons" target="_blank">Icon Listesi</a>
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Sıralama *</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" value="1" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Target" class="form-label">Hedef Pencere</label>
                                    <select asp-for="Target" class="form-control">
                                        <option value="_self">Aynı Sekme</option>
                                        <option value="_blank">Yeni Sekme</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Durum</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Dropdown mu?</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsDropdown" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsDropdown" class="form-check-label">Dropdown Menü</label>
                                    </div>
                                    <small class="form-text text-muted">Dropdown için URL'yi # yapın</small>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <strong>Hızlı Linkler:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Ana Sayfa: <code>/</code></li>
                                <li>Hakkımızda: <code>/About/About</code></li>
                                <li>Galeri: <code>/PhotoGalery/PhotoGalery</code></li>
                                <li>İletişim (scroll): <code>#contact</code></li>
                                @if (categories != null && categories.Any())
                                {
                                    <li><strong>Kategoriler:</strong></li>
                                    @foreach (var cat in categories)
                                    {
                                        <li class="ms-3">@cat.CategoryName: <code>/ServiceCategory/Services/@cat.Id</code></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            Kaydet
                        </button>
                        <a href="/MenuSettings/Index" class="btn btn-secondary">
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

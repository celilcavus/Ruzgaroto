@model Services

@{
    ViewData["Title"] = "Servisler Yönetimi";
    Layout = "_LayoutAdmin";
    var categories = ViewBag.Categories as IEnumerable<_01.RuzgarOto.Entity.ServiceCategory>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Yeni Servis Ekle
                    </h3>
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="Index" asp-controller="Services">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Servis Başlığı *</label>
                                    <input asp-for="Title" class="form-control" placeholder="örn: Şase Düzeltme" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ServiceCategoryId" class="form-label">Kategori</label>
                                    <select asp-for="ServiceCategoryId" class="form-control">
                                        <option value="">-- Kategori Seçin (Opsiyonel) --</option>
                                        @if (categories != null)
                                        {
                                            @foreach (var cat in categories)
                                            {
                                                <option value="@cat.Id">@cat.CategoryName</option>
                                            }
                                        }
                                    </select>
                                    <small class="form-text text-muted">Servisi bir kategoriye atayabilirsiniz</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama *</label>
                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Servis hakkında detaylı açıklama" required></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Image" class="form-label">Servis Resmi *</label>
                                    <input asp-for="Image" type="file" class="form-control" accept="image/*" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Durum</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            Kaydet
                        </button>
                        <a href="/Admin/Index" class="btn btn-secondary">
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Mevcut Servisler Listesi -->
    <div class="row mt-4">
        <div class="col-12">
            @await Component.InvokeAsync("Services")
        </div>
    </div>
</div>
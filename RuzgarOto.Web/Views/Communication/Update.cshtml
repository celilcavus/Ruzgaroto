@model _01.RuzgarOto.Entity.Communication

@{
    ViewData["Title"] = "İletişim Bilgilerini Düzenle";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        İletişim Bilgilerini Düzenle
                    </h3>
                </div>
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="hero-tab" data-bs-toggle="tab" data-bs-target="#hero" type="button">
                                    Ana Sayfa Hero
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button">
                                    İletişim Bilgileri
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="social-tab" data-bs-toggle="tab" data-bs-target="#social" type="button">
                                    Sosyal Medya
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="footer-tab" data-bs-toggle="tab" data-bs-target="#footer" type="button">
                                    Footer
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="hours-tab" data-bs-toggle="tab" data-bs-target="#hours" type="button">
                                    Çalışma Saatleri
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content mt-4" id="myTabContent">
                            <!-- Hero Section -->
                            <div class="tab-pane fade show active" id="hero" role="tabpanel">
                                <h5 class="mb-3">Ana Sayfa Hero Bölümü</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HeroTitle" class="form-label">Ana Başlık</label>
                                            <input asp-for="HeroTitle" class="form-control" placeholder="TİA ŞASECİ AHMET OTOMOTİV" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HeroSubtitle" class="form-label">Alt Başlık</label>
                                            <input asp-for="HeroSubtitle" class="form-control" placeholder="TOPKAPI BAYİ" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HeroDescription1" class="form-label">Açıklama 1</label>
                                            <textarea asp-for="HeroDescription1" class="form-control" rows="2"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HeroDescription2" class="form-label">Açıklama 2</label>
                                            <textarea asp-for="HeroDescription2" class="form-control" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Info -->
                            <div class="tab-pane fade" id="contact" role="tabpanel">
                                <h5 class="mb-3">İletişim Bilgileri</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Phone" class="form-label">Telefon 1</label>
                                            <input asp-for="Phone" class="form-control" placeholder="0 (212) 613 15 60" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Phone2" class="form-label">Telefon 2</label>
                                            <input asp-for="Phone2" class="form-control" placeholder="+90 501 150 50 60" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">E-posta 1</label>
                                            <input asp-for="Email" class="form-control" type="email" placeholder="topkapi@tiaotomotiv.com.tr" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Email2" class="form-label">E-posta 2</label>
                                            <input asp-for="Email2" class="form-control" type="email" placeholder="ozmeotomotiv@gmail.com" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Adress" class="form-label">Kısa Adres</label>
                                            <input asp-for="Adress" class="form-control" placeholder="İstanbul, Türkiye" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="AddressFull" class="form-label">Tam Adres</label>
                                            <textarea asp-for="AddressFull" class="form-control" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Social Media -->
                            <div class="tab-pane fade" id="social" role="tabpanel">
                                <h5 class="mb-3">Sosyal Medya Linkleri</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FacebookUrl" class="form-label">
                                                Facebook URL
                                            </label>
                                            <input asp-for="FacebookUrl" class="form-control" placeholder="https://facebook.com/..." />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="TwitterUrl" class="form-label">
                                                Twitter URL
                                            </label>
                                            <input asp-for="TwitterUrl" class="form-control" placeholder="https://twitter.com/..." />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="InstagramUrl" class="form-label">
                                                Instagram URL
                                            </label>
                                            <input asp-for="InstagramUrl" class="form-control" placeholder="https://instagram.com/..." />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="LinkedinUrl" class="form-label">
                                                LinkedIn URL
                                            </label>
                                            <input asp-for="LinkedinUrl" class="form-control" placeholder="https://linkedin.com/..." />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="YoutubeUrl" class="form-label">
                                                YouTube URL
                                            </label>
                                            <input asp-for="YoutubeUrl" class="form-control" placeholder="https://youtube.com/..." />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="tab-pane fade" id="footer" role="tabpanel">
                                <h5 class="mb-3">Footer Bilgileri</h5>
                                <div class="mb-3">
                                    <label asp-for="FooterAbout" class="form-label">Hakkımızda Footer Metni</label>
                                    <textarea asp-for="FooterAbout" class="form-control" rows="3" placeholder="Şirketimiz hakkında..."></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="CopyrightText" class="form-label">Copyright Metni</label>
                                    <input asp-for="CopyrightText" class="form-control" placeholder="© 2024 Tüm Hakları Saklıdır | ÖZME OTOMOTİV" />
                                </div>
                            </div>

                            <!-- Working Hours -->
                            <div class="tab-pane fade" id="hours" role="tabpanel">
                                <h5 class="mb-3">Çalışma Saatleri</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="WorkingHours" class="form-label">Hafta İçi Çalışma Saatleri</label>
                                            <input asp-for="WorkingHours" class="form-control" placeholder="Pazartesi - Cumartesi: 09:00 - 18:00" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="WorkingHoursWeekend" class="form-label">Hafta Sonu Çalışma Saatleri</label>
                                            <input asp-for="WorkingHoursWeekend" class="form-control" placeholder="Pazar: Kapalı" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-check mt-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Aktif
                            </label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            Kaydet
                        </button>
                        <a href="/Admin/Index" class="btn btn-secondary">
                            Geri Dön
                        </a>
                    </div>
</form>
            </div>
        </div>
    </div>
</div>
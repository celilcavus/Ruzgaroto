@model IEnumerable<Services>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>RESİM</td>
            <td>BAŞLIK</td>
            <td>SON GÜNCELLEME TARİHİ</td>
            <td>AKTİF</td>
            <td>GÜNCELLE</td>
            <td>SİL</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="/Services/@item.ImageName" alt="@item.ImageName" style="width:100px;height:100px;object-fit:cover;" class="img-fluid" /></td>
                <td>@item.Title</td>
                <td>@item.UpdatedDate</td>
                @if (item.IsActive)
                {
                    <td>Aktif</td>
                }
                else
                {
                    <td>Aktif Değil</td>
                }
                <td><a asp-action="Update" asp-controller="Services" asp-route-Id="@item.Id" class="btn btn-warning">Güncelle</a></td>
                <td><a asp-action="Delete" asp-controller="Services" asp-route-Id="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
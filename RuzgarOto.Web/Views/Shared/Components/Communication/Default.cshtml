@model IEnumerable<Communication>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>ADRES</td>
            <td>MAİL</td>
            <td>TELEFON</td>
            <td>AKTİF</td>
            <td>GÜNCELLE</td>
            <td>SİL</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Adress</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                @if (item.IsActive)
                {
                    <td>Aktif</td>
                }
                else
                {
                    <td>Aktif Değil</td>
                }
                <td><a asp-action="Update" asp-controller="Communication" asp-route-Id="@item.Id" class="btn btn-warning">Güncelle</a></td>
                <td><a asp-action="Delete" asp-controller="Communication" asp-route-Id="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>